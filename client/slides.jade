template(name='slide2')
  +Slide
    +DOMElement
      p
        img(src="/img/meteor-logo.png",style="height: 50px; position: relative; top: -8px")
        span(style="font-size: 150%; position: relative; top: -6px") +
        img(src="/img/famous_logo.jpg",style="height: 50px")

      span(style="font-size: 120%; font-weight: bold") famo.us
      br
      ul(style="display: inline-block; white-space: nowrap; position: relative; left: -10px")
        li 60 fps, including on Mobile
        li Physics engine for natural UI

      h3 gadicohen:famous-views
      i "Famous, Meteor-style"
      br
      ul(style="display: inline-block; white-space: nowrap; position: relative; left: -10px")
        li Seamlessly use Famous components inside your Templates
        li Fully reactive on attributes, supports reactive cursors
        li Makes Meteor "play nice" with Famous (timers, computations)
        li Lowers the barrier for putting "cool stuff" in your app
      .footer Gadi Cohen (gadicc)

template(name='slide3')
  +Slide
    +DOMElement
      h3 Demo

      +snippet lang="javascript"
        | Template.body.helpers({
        |   people: function() { return People.find(); }
        | });
        | 
        | FView.wrap('DemoLayout', DemoLayout);
        | FView.wrap('DemoNode', DemoNode);

      +snippet lang="spacebars"
        | &lt;body&gt;
        |   {{dstache}}#Scene}}
        |     {{dstache}}#DemoLayout}}
        |       {{dstache}}#famousEach people}}
        |         {{dstache}}#DemoNode}}
        |           {{dstache}}#DOMElement}}
        |             &lt;img src="{{dstache}}url}}"&gt;
        |           {{dstache}}/DOMElement}}
        |         {{dstache}}/DemoNode}}
        |       {{dstache}}/famousEach}}
        |     {{dstache}}#DemoLayout}}
        |   {{dstache}}/Scene}}
        | &lt;body&gt;
      else
        if currentLang 'jade'
          | body
          |   +Scene
          |     +DemoLayout
          |       +famousEach people
          |         +DemoNode
          |           +DOMElement
          |             img(src="{{dstache}}url}}")

      .footer Gadi Cohen (gadicc)

template(name='slide4')
